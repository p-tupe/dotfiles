#!/usr/bin/env zsh

if [[ ! -e /Volumes/SSD ]]; then
  echo "SSD not mounted, skipping"
  exit
fi

rsync \
  --archive \
  --partial \
  --recursive \
  --delete \
  --progress \
  --exclude=".DS_Store" \
  --timeout=60 \
  $HOME/Documents \
  $HOME/Music \
  $HOME/Notes \
  $HOME/Pictures \
  $HOME/Ebooks \
  $HOME/.ssh \
  $HOME/.config \
  $HOME/.local/bin \
  $HOME/.local/share \
  $HOME/.dotfiles \
  /Volumes/SSD
