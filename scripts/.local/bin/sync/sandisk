#!/usr/bin/env zsh

if [[ ! -e /Volumes/Sandisk ]]; then
  echo "Sandisk not mounted, skipping"
  exit
fi

rsync \
  --archive \
  --partial \
  --recursive \
  --delete \
  --exclude='.*' \
  --progress \
  $HOME/Documents \
  $HOME/Music \
  $HOME/Notes \
  $HOME/Pictures \
  $HOME/Ebooks \
  /Volumes/Sandisk
