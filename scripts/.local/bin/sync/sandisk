#!/usr/bin/env bash

if [[ ! -e /Volumes/Sandisk ]]; then
  echo "Sandisk not mounted, skipping"
  exit
fi

rsync \
  --archive \
  --partial \
  --recursive \
  --delete \
  --exclude='.*' \
  $HOME/Documents \
  $HOME/Music \
  $HOME/Notes \
  $HOME/Pictures \
  $HOME/Ebooks \
  $HOME/.dotfiles \
  /Volumes/Sandisk

# To backup sensitive data, use:
#
# zip --encrypt ...
#
# For relatively convenient security.
